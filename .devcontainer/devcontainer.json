{
  "name": "Cryptomeria Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "ubuntu",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",

  // ğŸ› ï¸ ã€ä¿®æ­£ã€‘
  // 1. Dockerã‚½ã‚±ãƒƒãƒˆã®æ‰‹å‹•ãƒã‚¦ãƒ³ãƒˆã‚’å‰Šé™¤ã—ã¾ã—ãŸ (docker-outside-of-docker featureãŒè‡ªå‹•å‡¦ç†ã™ã‚‹ãŸã‚)ã€‚
  // 2. .kubeãƒ•ã‚©ãƒ«ãƒ€ã¯ ${localEnv:HOME} ã‚’ä½¿ç”¨ã—ã¦OSã”ã¨ã®ãƒ‘ã‚¹å·®ç•°ã‚’å¸åã—ã¦ã„ã¾ã™ã€‚
  "mounts": [
    "source=${localEnv:HOME}/.kube,target=/home/ubuntu/.kube,type=bind,consistency=cached",

    // å„node_modulesã‚’å€‹åˆ¥volumeåŒ–
    "source=${localWorkspaceFolderBasename}-bff-node_modules,target=/workspace/util/Cryptomeria-Bff/node_modules,type=volume",
    "source=${localWorkspaceFolderBasename}-webui-node_modules,target=/workspace/util/Cryptomeria-WebUI/node_modules,type=volume",

    // ã¤ã„ã§ã« npm cache ã‚‚ï¼ˆä»»æ„ï¼‰
    "source=${localWorkspaceFolderBasename}-npm-cache,target=/home/ubuntu/.npm,type=volume"
  ],


  // ğŸ“ KUBECONFIGç’°å¢ƒå¤‰æ•°ã‚’æ˜ç¤ºçš„ã«è¨­å®š
  "remoteEnv": {
    "KUBECONFIG": "/home/ubuntu/.kube/config"
  },

  // âœ¨ Features ã§ãƒ„ãƒ¼ãƒ«ã‚’ä¸€æ‹¬ã‚¤ãƒ³ã‚¹ãƒˆãƒ¼ãƒ«
  // docker-outside-of-docker ãŒãƒ›ã‚¹ãƒˆOSã«åˆã‚ã›ã¦é©åˆ‡ã«ã‚½ã‚±ãƒƒãƒˆ/ãƒ‘ã‚¤ãƒ—ã‚’ãƒã‚¦ãƒ³ãƒˆã—ã¦ãã‚Œã¾ã™
  "features": {
    // 1. Docker (Hostã®Dockerã‚’ä½¿ã†è¨­å®š)
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    // 2. åŸºæœ¬ãƒ¦ãƒ¼ãƒ†ã‚£ãƒªãƒ†ã‚£ (zsh, git, sudoãªã©)
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "ubuntu"
    },
    // 3. Go (ãƒãƒ¼ã‚¸ãƒ§ãƒ³æŒ‡å®šå¯èƒ½)
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    },
    // 4. Node.js (LTS)
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installYarnUsingApt": "false"
    },
    // 5. Helm & Kubectl (ã‚»ãƒƒãƒˆã§å…¥ã‚Šã¾ã™)
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "skellock.just",
        "redhat.vscode-yaml",
        "pbkit.vscode-pbkit",
        "google.geminicodeassist"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      }
    }
  }
}