{
  "name": "Raidchain Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "ubuntu",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",
  "mounts": [
    // 変更点: 直接 .kube 内にマウントせず、一時的な場所にマウントします。
    // これにより、Dockerが .kube ディレクトリを root 権限で自動作成するのを防ぎます。
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.kube/config,target=/tmp/kube-config-source,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "KUBECONFIG": "/home/ubuntu/.kube/config"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "ubuntu"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installYarnUsingApt": "false"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    },
    "ghcr.io/devcontainers-community/features/deno:1": {
      "version": "latest"
    }
  },
  // 外部スクリプトを実行。権限付与してから実行します。
  "postStartCommand": "chmod +x .devcontainer/setup-kube.sh && .devcontainer/setup-kube.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "skellock.just",
        "redhat.vscode-yaml",
        "pbkit.vscode-pbkit",
        "google.geminicodeassist"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      }
    }
  }
}