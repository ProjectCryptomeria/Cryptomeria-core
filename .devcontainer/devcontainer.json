{
  "name": "Raidchain Dev Container",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "ubuntu",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind",
  "workspaceFolder": "/workspace",

  "mounts": [
    // ãƒ›ã‚¹ãƒˆã®kubeconfigã‚’èª­ã¿å–ã‚Šå°‚ç”¨ã‚½ãƒ¼ã‚¹ã¨ã—ã¦ãƒã‚¦ãƒ³ãƒˆ
    "source=${localEnv:HOME}${localEnv:USERPROFILE}/.kube/config,target=/home/ubuntu/.kube/config.source,type=bind,consistency=cached"
  ],

  "remoteEnv": {
    "KUBECONFIG": "/home/ubuntu/.kube/config"
  },

  "features": {
    "ghcr.io/devcontainers/features/docker-outside-of-docker:1": {
      "version": "latest",
      "enableNonRootDocker": "true",
      "moby": "true"
    },
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": "true",
      "username": "ubuntu"
    },
    "ghcr.io/devcontainers/features/go:1": {
      "version": "1.25"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts",
      "installYarnUsingApt": "false"
    },
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
      "version": "latest",
      "helm": "latest",
      "minikube": "none"
    }
  },

  // ğŸ› ï¸ ã€ä¿®æ­£ã€‘
  // ã‚¤ãƒ³ãƒ©ã‚¤ãƒ³ã‚³ãƒãƒ³ãƒ‰ã‚’ã‚„ã‚ã€å¤–éƒ¨ã‚¹ã‚¯ãƒªãƒ—ãƒˆã‚’å®Ÿè¡Œã™ã‚‹ã‚ˆã†ã«å¤‰æ›´ã—ã¾ã—ãŸã€‚
  // å®Ÿè¡Œæ¨©é™ã‚’ä»˜ä¸ã—ã¦ã‹ã‚‰å®Ÿè¡Œã—ã¾ã™ã€‚
  "postStartCommand": "chmod +x .devcontainer/setup-kube.sh && .devcontainer/setup-kube.sh",

  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "skellock.just",
        "redhat.vscode-yaml",
        "pbkit.vscode-pbkit",
        "google.geminicodeassist"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "go.toolsManagement.checkForUpdates": "local",
        "go.useLanguageServer": true,
        "go.gopath": "/go"
      }
    }
  }
}
