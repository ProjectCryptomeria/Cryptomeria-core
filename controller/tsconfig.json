{
    "compilerOptions": {
      "module": "nodenext",
      "target": "esnext",
      "rootDir": "./src",
      "outDir": "./dist",
      "types": [
        "node",
      ],
      "sourceMap": true,
      "declaration": true,
      "declarationMap": true,
      "noUncheckedIndexedAccess": true,
      "exactOptionalPropertyTypes": true,
      "strict": true,
      "jsx": "react-jsx",
      "isolatedModules": true,
      "noUncheckedSideEffectImports": true,
      "moduleDetection": "force",
      "skipLibCheck": true,
  },
  "include": ["src/**/*"]
}
